{
    "clangd.arguments": [
        "--compile-commands-dir=${workspaceDir}/build",
        "-header-insertion=never"
    ],
    "files.exclude": {
        "**/.cache": true,
        "**/.clang-format": true,
        "**/.devcontainer": true,
        "**/.editorconfig": true,
        "**/.gitattributes": true,
        "**/.gitignore": true,
        "**/.vscode": true,
        "**/CMakeLists.txt": true,
    },
    "editor.formatOnSave": true,
    "[markdown]": {
        "editor.formatOnSave": false
    },
    "cmake.configureOnOpen": false,
    "workbench.startupEditor": "none",
    "C_Cpp.intelliSenseEngine": "disabled",
}
